<Window x:Class="LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local1="clr-namespace:DesktopApp.Model"
        xmlns:local2="clr-namespace:MatchApp.Desktop.Model"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" SnapsToDevicePixels="True"
        Background="{DynamicResource WindowBackgroundBrush}" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="TextBoxInError" TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
              Value="{Binding RelativeSource={x:Static RelativeSource.Self},
                              Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    
    <Border Style="{StaticResource CoreBorderStyle}" Height="496">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="1" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" Height="40">
                    <Path Width="19.5" Height="28.5" Margin="20,0,12,0" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{StaticResource ThemeColorBrush}" Data="F1 M 25,27L 46,19L 46,22.25L 28.5,29L 31.75,31.25L 51,23.75L 51,48.5L 31.75,57L 25,52L 25,27 Z "/>
                    <TextBlock Foreground="{StaticResource ThemeColorBrush}" Text="Login" FontSize="20" Margin="8,2,0,0" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe WP" />
                </StackPanel>
                <Thumb Opacity="0" Background="Transparent" Foreground="{x:Null}" DragDelta="Thumb_OnDragDelta"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <Button ToolTip="System Information" Width="32" Height="28" Style="{StaticResource WindowActionButton}" Click="BtnActionSystemInformation_OnClick">
                        <Image Source="Images/images.jpg" Height="20" Width="20" Style="{StaticResource UserControlImageStyle}" ></Image>
                    </Button>
                    <Button ToolTip="Minimize" Width="32" Height="28" Style="{StaticResource WindowActionButton}" Click="BtnActionMinimize_OnClick">
                        <Rectangle Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Margin="0,16,1,2" Width="9" Height="2" VerticalAlignment="Bottom" d:LayoutOverrides="Height"/>
                    </Button>
                    <Button ToolTip="Close" Width="32" Height="28" Style="{StaticResource WindowActionButtonClose}" Click="btnActionClose_Click">
                        <Path Width="10" Height="10" Stretch="Fill" Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Data="F1 M 26.9166,22.1667L 37.9999,33.25L 49.0832,22.1668L 53.8332,26.9168L 42.7499,38L 53.8332,49.0834L 49.0833,53.8334L 37.9999,42.75L 26.9166,53.8334L 22.1666,49.0833L 33.25,38L 22.1667,26.9167L 26.9166,22.1667 Z "/>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Background="{StaticResource MainWindowSplitBorderBrush}"></Grid>
            <Grid Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1" Name="SplitGrid" Width="20" Visibility="Visible">
                        <StackPanel Height="326" Width="1" Background="{StaticResource MainWindowSplitBorderBrush}" Margin="0,40,0,40"></StackPanel>
                    </Grid>
                    <Grid Grid.Column="2" Name="LocalLoginGrid" Visibility="Visible" Width="380">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="Images/images.jpg" Height="80" Width="167" Margin="0,20,0,0" />
                            <Label Content="Login to continue" Margin="0,4,0,12" HorizontalAlignment="Center" Foreground="{DynamicResource MainBlackFontColor}" FontFamily="Segoe UI Semilight" FontSize="20" Height="46"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="19*"/>
                                    <ColumnDefinition Width="91*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Margin="4,8,2,6" VerticalAlignment="Center" TextAlignment="Center" FontSize="16" Height="22" Text="Username" Foreground="{StaticResource UserControlButtonIsPressedBrush}"
                                           Visibility="{Binding ElementName=LocalUserNameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="2" />
                                <TextBox Style="{StaticResource LoginTextBoxStyle}"  Name="LocalUserNameTextBox" IsEnabled="True"  CharacterCasing="Lower" TabIndex="4" Grid.ColumnSpan="2" />
                            </Grid>
                            <Grid Margin="0,0,0,8">
                                <PasswordBox Background="Transparent" HorizontalContentAlignment="Center" BorderBrush="{StaticResource MainBlackFontColor}" HorizontalAlignment="Center" VerticalContentAlignment="Center" Name="LocalPasswordBox" Height="36" Width="220" IsEnabled="True" TabIndex="5" />
                            </Grid>
                            <Button x:Name="LocalLoginButton" Content="Login" Width="220" Height="36" Margin="0,0,0,32" TabIndex="8" Click="LocalLoginButton_Click" />
                            <Label Name="LabelErrorLogin" Foreground="Red"></Label>

                            <Label Content="Don't have account yet? Click here:" FontSize="10"></Label>
                            <Button Name="Btn_OpenNewUser" Content="Register" Width="219" Height="36" Click="Btn_OpenNewUser_Click"></Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
          
            <Popup Placement="Center" Name="Popup_NewUser" >
                <Border BorderBrush="Black" BorderThickness="2">


                    <Grid Background="White" Width="402" Height="378" x:Name="PopupGrid">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                           
                        <TextBlock Text="Please enter following information:"></TextBlock>
                            <Label>Username:</Label>

                            <TextBox Style="{StaticResource TextBoxInError}" Name="Textbox_NewUserName" IsEnabled="True"  CharacterCasing="Lower"  Grid.ColumnSpan="2" FontSize="20">
                                <TextBox.Text>
                                    <Binding Path="UserName"
                                           UpdateSourceTrigger="PropertyChanged" >
                                        <Binding.ValidationRules>
                                            <local2:UserRule Min="3" Max="20"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>


                            <Label>Password:</Label>
                            <PasswordBox   Name="Textbox_NewPassword" IsEnabled="True"   Grid.ColumnSpan="2" Height="32" HorizontalContentAlignment="Center" FontSize="20">
                            </PasswordBox>
                            
                                                        
                        <Label >Email:</Label>
                            <TextBox Style="{StaticResource TextBoxInError}"  Name="Textbox_NewEmail" IsEnabled="True"   Grid.ColumnSpan="2" FontSize="20" >
                                <TextBox.Text>
                                    <Binding Path="Email"
                                           UpdateSourceTrigger="PropertyChanged" >
                                        <Binding.ValidationRules>
                                            <local2:EmailRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            
                            
                        <Label>Name:</Label>
                            <TextBox Style="{StaticResource TextBoxInError}" Name="Textbox_NewName"  IsEnabled="True" CharacterCasing="Normal"  TabIndex="4" Grid.ColumnSpan="2" FontSize="20">
                                <TextBox.Text>
                                    <Binding Path="Name"
                                           UpdateSourceTrigger="PropertyChanged" >
                                        <Binding.ValidationRules>
                                            <local2:UserRule Min="3" Max="20"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            
                            
                        <Label>Surname:</Label>
                            <TextBox Style="{StaticResource TextBoxInError}" Name="Textbox_NewSurname" IsEnabled="True" CharacterCasing="Normal"  Grid.ColumnSpan="2" FontSize="20" >
                                <TextBox.Text>
                                    <Binding  Path="Surname"
                                           UpdateSourceTrigger="PropertyChanged" >
                                        <Binding.ValidationRules>
                                            <local2:UserRule Min="3" Max="20"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>

                            </TextBox>
                            <Separator/>
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="Btn_RegisterNewUser" Click="Btn_RegisterNewUser_Click">Register</Button>
                            <Label></Label>
                            <Button Name="Btn_CancelPopup" Click="Btn_CancelPopup_Click">Cancel</Button>
                        </StackPanel>
                    </StackPanel>

                </Grid>
                </Border>
            </Popup>
        </Grid>
        

    </Border>
</Window>
